{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Enable emitting files for build
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    
    // Output directory
    "outDir": "./dist",
    "rootDir": "./",
    
    // Module settings for Node.js compatibility
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    
    // Ensure compatibility
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "examples/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "examples/**/*.test.ts",
    "examples/**/*.spec.ts"
  ]
}
